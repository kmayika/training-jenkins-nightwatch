{
    "src_folders": ["tests"],

    "selenium": {
        "start_process": false
    },
    "test_settings": { 
        "default" : {
            "check_process_delay": 5000,
            "desiredCapabilities": {
            "browserName": "chrome",
            "chromeOptions" : {
                "args" : ["--no-sandbox"]
            },
            "acceptSslCerts": true
            }
        },
        "chrome": {
            "desiredCapabilities": {
              "browserName": "chrome",
              "chromeOptions": {
                "args": ["--headless", "--no-sandbox"]
              }
            },
            "selenium": {
              "host": "localhost",
              "port": 4444
            }
        },
        "firefox": {
            "desiredCapabilities" : {
                "browserName" : "firefox",
                "acceptInsecureCerts" : true,
                    "moz:firefoxOptions" : {
                        "args" : ["--headless", "--no-sandbox", "--disable-gpu"]
                    }
            }
        }
    }
}
