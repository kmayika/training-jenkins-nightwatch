{
    "src_folders": ["tests"],
    "test_settings": {
        "default": {
            "webdriver" : {
                "port": 9515,
                "start_process": true,
                "server_path": "./node_modules/chromedriver/bin/chromedriver",
                "cli_args": []
              },
            "screenshots": {
                "enabled": true,
                "path": "./tests_output/screenshots",
                "on_failure": true,
                "on_error": true
            }
        },
        "chrome": {
            "desiredCapabilities": {
              "browserName": "chrome",
              "chromeOptions": {
                "args": ["--headless", "--no-sandbox"]
              }
            }
        }
    }
}
